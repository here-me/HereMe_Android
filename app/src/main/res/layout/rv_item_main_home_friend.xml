<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/rv_main_friend_border"
            android:layout_width="match_parent"
            android:layout_height="160dp">
        <LinearLayout android:layout_marginLeft="13dp"

                      android:orientation="vertical"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_rv_item_home_friend_picture"
                    android:background="@drawable/rv_main_friend_circle_border"
                    android:layout_marginTop="16dp"
                    android:layout_width="76dp"
                    android:layout_height="76dp"/>
            <TextView
                    android:id="@+id/txt_rv_item_home_friend_name"
                    android:text="우리엄마"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:fontFamily="@font/nanum_square_round_otfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_marginTop="23dp"
                android:layout_marginLeft="26.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/rv_item_home_friend_draw"
                    android:layout_width="51dp"
                    android:layout_height="52dp"
                    android:src="@drawable/clear"/>
            <TextView
                    android:id="@+id/rv_item_home_friend_where"
                    android:layout_marginLeft="16.5dp"
                    android:layout_toRightOf="@+id/rv_item_home_friend_draw"
                    android:text="서귀포시"
                    android:textSize="12sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/nanum_square_round_otfr"
                    android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/rv_item_home_friend_temp"
                    android:layout_marginLeft="16.5dp"
                    android:layout_toRightOf="@+id/rv_item_home_friend_draw"
                    android:text="26º"
                    android:layout_below="@+id/rv_item_home_friend_where"
                    android:textSize="30sp"
                    android:textColor="#212121"
                    android:fontFamily="@font/nanum_square_round_otfr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
        </RelativeLayout>
    </LinearLayout>
    <View
            android:background="#eeeeee"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>
</LinearLayout>