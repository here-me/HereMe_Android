<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".fragment.MainHomeFragment">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
                android:background="#eeeeee"
                android:layout_width="match_parent"
              android:layout_height="4dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:text="나의 위치"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:fontFamily="@font/nanum_square_round_otfb"
                        android:layout_width="86dp"
                          android:layout_height="wrap_content"/>
                <ImageView
                        android:src="@drawable/clear"
                        android:layout_marginLeft="19dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="30dp"
                           android:layout_height="30dp"/>

                <TextView
                        android:id="@+id/txt_frag_main_home_my_temp"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:text="17º"
                        android:textSize="24sp"
                        android:textColor="#212121"
                        android:fontFamily="@font/nanum_square_round_otfr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/txt_frag_main_home_my_location"
                        android:layout_marginLeft="16dp"
                        android:layout_gravity="center_vertical"
                        android:text="강남구"
                        android:textSize="14sp"
                        android:textColor="#212121"
                        android:fontFamily="@font/nanum_square_round_otfr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
        <View
                android:background="#eeeeee"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_frag_main_home_friend_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </FrameLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>